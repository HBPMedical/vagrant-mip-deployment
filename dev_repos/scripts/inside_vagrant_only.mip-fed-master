#!/usr/bin/env bash

BRANCH=""

POSITIONAL=()
while [[ $# -gt 0 ]]; do
	case $1 in
		--branch)
			BRANCH="$2"
			shift
			shift
			;;
		*)
			POSITIONAL+=("$1")
			shift
			;;
	esac
done
set -- "${POSITIONAL[@]}"

ret=1
export DEBIAN_FRONTEND=noninteractive

ret=0
if [[ $ret -eq 0 ]]; then
	if [[ "$BRANCH" != "" ]]; then
		echo "/vagrant/dev_repos/mip-deployment/mip --node-type ms --quiet --yes --keep-installer --force-install-unstable --branch \"$BRANCH\" install"
		/vagrant/dev_repos/mip-deployment/mip --node-type ms --quiet --yes --keep-installer --force-install-unstable --branch "$BRANCH" install
	else
		echo "/vagrant/dev_repos/mip-deployment/mip --node-type ms --quiet --yes --keep-installer install"
		/vagrant/dev_repos/mip-deployment/mip --node-type ms --quiet --yes --keep-installer install
	fi
	ret=$?
fi

if [[ $ret -eq 0 ]]; then
	echo "/vagrant/dev_repos/mip-deployment/mip --node-type ms --quiet --yes configure all"
	/vagrant/dev_repos/mip-deployment/mip --node-type ms --quiet --yes configure all
	ret=$?
fi

exit $ret
